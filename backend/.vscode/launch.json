{
    "version": "0.2",
    "configurations": [
        {
            "name": "C++ Debug (LLDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/CCA",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for LLDB",
                    "text": "enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "sourceFileMap": {
                "/mnt/c": "${workspaceFolder}"
            }
        }
    ]
}
